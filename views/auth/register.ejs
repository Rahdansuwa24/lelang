<%- include('../partials/__head') %>
    <div class="container">
        <% if (messages.success) { %>
          <div class="alert alert-info" role="alert">
            <%- messages.success %>
          </div>
        <% } %> 
        <div class="row">
          <div class="col">
            <form action="/saveusers" method="POST">
                <div class="mb-3">
                  <label for="nama" class="form-label">Email</label>
                  <input type="text" class="form-control" name="email">
                </div>
                <div class="mb-3">
                    <label for="nama" class="form-label">Sandi</label>
                    <input type="password" class="form-control" name="passwords">
                  </div>
                <div class="mb-3">
                    <label for="nama" class="form-label">Alamat</label>
                    <input type="text" class="form-control" name="alamat_user">
                  </div>
                <div class="mb-3">
                    <label for="nama" class="form-label">No Telephone</label>
                    <input type="text" class="form-control" name="no_hp">
                  </div>
                <div class="mb-3">
                    <label for="nama" class="form-label">Tanggal Lahir</label>
                    <input type="date" class="form-control" name="tanggal_lahir">
                  </div>
                <div class="mb-3">
                    <label for="nama" class="form-label">Role</label>
                    <input type="text" class="form-control" name="level_users">
                  </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-sm btn-success">Register</button>
                </div>
            </form>
          </div>
        </div>
    </div>
    <%- include('../partials/__foot') %>